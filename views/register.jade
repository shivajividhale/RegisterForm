doctype html

html
    head(lang='en')
        meta(charset='UTF-8')
        title TeamUp
        // Latest compiled and minified CSS
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    body
        .container
            .jumbotron
                h3 Let's TeamUP
            #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px')
                .panel.panel-info
                    .panel-heading
                        .panel-title Sign Up
                        div(style='float:right; font-size: 85%; position: relative; top:-10px')
                            a#signinlink(href='#', onclick="$('#signupbox').hide(); $('#loginbox').show()") Sign In
                    .panel-body
                        form#signupform.form-horizontal(role='form', method='post', action='/register')
                           console.log("sign up")
                            #signupalert.alert.alert-danger(style='display:none')
                                p Error:
                                span
                            .form-group
                                label.col-md-3.control-label(for='email') Email
                                .col-md-9
                                    input.form-control(type='email', name='email', placeholder='Email Address')
                            .form-group
                                label.col-md-3.control-label(for='firstname') First Name
                                .col-md-9
                                    input.form-control(type='text', name='firstname', placeholder='First Name')
                            .form-group
                                label.col-md-3.control-label(for='lastname') Last Name
                                .col-md-9
                                    input.form-control(type='text', name='lastname', placeholder='Last Name')
                            .form-group
                                label.col-md-3.control-label(for='password') Password
                                .col-md-9
                                    input.form-control(type='password', name='password', placeholder='Password')
                            .form-group
                                // Button
                                .col-md-offset-3.col-md-9
                                    button#btn-signup.btn.btn-info(type='submit')
                                        i.icon-hand-right
                                        | &nbsp Sign Up
                                    span(style='margin-left:8px;')